<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Soal Topik <%= topicId %></title>
    <link
      rel="stylesheet"
      href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
    />
  </head>
  <body>
    <h1>Daftar soal untuk topik <%= topicId %></h1>
    <a href="/topics/list/<%= topicId %>/create">Tambah Soal</a>
    <ul>
      <% questions.forEach(question => { %>
      <li>
        <div><Strong>Soal: </Strong><%- question.question%></div>
        <% if(question.pathImage) { %>
        <div>
          <img
            src="<%= question.pathImage %>"
            alt="Gambar"
            style="max-width: 200px"
          />
          <p><%= question.imageDescription %></p>
        </div>
        <% } %>
        <div>
          <a href="/topics/list/<%= topicId %>/edit/<%= question.id %>">Edit</a>
        </div>
        <form
          action="/topics/list/<%= topicId %>/delete/<%= question.id%>"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Apakah anda yakin ingin menghapus soal ini?');"
          >
            Hapus
          </button>
        </form>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
