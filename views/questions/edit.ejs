<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Soal</title>
    <link
      rel="stylesheet"
      href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
    />
    <style>
      #editor-container {
        height: 200px;
      }
    </style>
  </head>
  <body>
    <h1>Edit soal untuk topik <%= topicId %></h1>
    <form
      action="/topics/list/<%= topicId %>/edit/<%= question.id %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <div>
        <label>Soal: </label>
        <div id="editor-container"></div>
        <input type="hidden" name="question" id="question" />
      </div>
      <div>
        <label>Upload gambar (jika ingin mengganti gambar)</label>
        <input type="file" name="image" />
      </div>
      <div>
        <label>Deskripsi gambar</label>
        <textarea name="imageDescription">
<%= question.imageDescription %></textarea
        >
      </div>
      <button type="submit">Update Soal</button>
    </form>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
      const quill = new Quill("#editor-container", {
        theme: "snow",
      });

      //   prefill editor dengan konten soal yang ada di database
      quill.root.innerHTML = `<%- question.question %>`;
      document.querySelector("form").addEventListener("submit", () => {
        document.querySelector("#question").value = quill.root.innerHTML;
      });
    </script>
  </body>
</html>
